[mysqld]

# KONFIGURAZIO FITXATEGIA

user                    = mysql
pid-file                = /var/run/mysqld/mysqld.pid
socket                  = /var/run/mysqld/mysqld.sock
port                    = 3306
basedir                 = /usr
datadir                 = /var/lib/mysql
tmpdir                  = /tmp

# Edozein hostetako konexioak baimentzen ditu (Docker)
# Mariadb-k normalean 127.0.0.1 portua erabiltzen du, 0.0.0.0 ra aldatu egin dugu
# Interface guztiak entzun eta konektatu ahal izateko

bind-address            = 0.0.0.0

# Sare konexioak baimentzeko "false" modura aldatu behar da

skip-networking         = false

# Unikode karaktereak eta sailkatze arauak konfiguratu

character-set-server    = utf8mb4
collation-server        = utf8mb4_general_ci

# Akats edo erroreen log konfigurazioa

log_error               = /var/log/mysql/error.log

# Bezeroaren DNS-aren izena irakurtzea sahiesten du (abiadura azkartzeko da) 

skip-name-resolve


